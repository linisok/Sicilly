<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="xyz.shaohui.sicilly"
        >

    <uses-feature
            android:name="android.hardware.camera2"
            android:required="false"
            />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
            android:name=".SicillyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            tools:replace="android:icon"
            >
        <activity android:name=".views.home.IndexActivity"/>
        <activity android:name=".views.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.StatusActivity"/>
        <activity android:name=".views.user_info.UserActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:scheme="me.shaohui.sicilly.user"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.CreateActivity"/>
        <activity android:name=".views.activities.SearchActivity"/>
        <activity android:name=".views.activities.UserListActivity"/>
        <activity android:name=".views.chat.ChatActivity"/>
        <activity android:name=".views.activities.SettingActivity"/>
        <activity android:name=".views.login.LoginActivity"/>
        <activity android:name=".views.activities.SearchResultActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:scheme="me.shaohui.sicilly.catalog"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.create_status.CreateStatusActivity">
        </activity>
        <activity android:name=".views.status_detail.StatusDetailActivity">
        </activity>
        <activity android:name=".views.web.WebActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:scheme="me.shaohui.sicilly.http"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.photo.PictureActivity"
                android:theme="@style/AppTheme.PictureActivity">
        </activity>
        <meta-data android:value="57e42a8ce0f55a92750015e0" android:name="UMENG_APPKEY"/>
        <meta-data android:value="fir_test" android:name="UMENG_CHANNEL"/>
    </application>

</manifest>