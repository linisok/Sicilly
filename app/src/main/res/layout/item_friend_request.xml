<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            app:riv_corner_radius="3dp"
            tools:src="@mipmap/ic_icon"
            />
    <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_avatar"
            android:layout_marginTop="@dimen/spacing_normal"
            android:textSize="16sp"
            android:textColor="@color/text_main"
            tools:text="邵辉Vista"
            />
    <TextView
            android:id="@+id/user_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/user_avatar"
            android:layout_below="@id/user_name"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_tag"
            tools:text="中国新闻网 参与互动. 视频：泰国国王普密蓬·阿杜德 病逝视频回顾其生平经历 来源：央视新闻. 中新网10月14日电综合"
            />
    <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="center"
            >

        <ImageButton
                android:id="@+id/action_accept"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/drawable_accent_round_8"
                app:srcCompat="@drawable/ic_accept"
                android:layout_marginBottom="@dimen/spacing_normal"
                />
        <ImageButton
                android:id="@+id/action_deny"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/drawable_red_round"
                app:srcCompat="@drawable/ic_deny"
                />
    </LinearLayout>

</RelativeLayout>