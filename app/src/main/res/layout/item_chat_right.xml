<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        >
    <com.daasuu.bl.BubbleLayout
            android:id="@+id/message_text_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_right="100%"
            app:bl_arrowDirection="right"
            app:bl_arrowHeight="10dp"
            app:bl_arrowWidth="5dp"
            app:bl_cornersRadius="6dp"
            app:bl_bubbleColor="#D1F1FD"
            android:padding="12dp"
            app:bl_arrowPosition="@dimen/spacing_normal"
            >
        <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:maxWidth="250dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="锤子科技（全稱：锤子科技（北京）股份有限公司／北京锤子数码科技有限公司）"
                />
    </com.daasuu.bl.BubbleLayout>

    <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/message_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_centerY="message_text_wrapper.centerY"
            app:layout_right="message_text_wrapper.left-5dp"
            android:visibility="visible"
            style="@style/Widget.AppCompat.ProgressBar"
            />

    <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_right="100% - 16dp"
            app:layout_top="message_text_wrapper.bottom+5dp"
            android:textColor="@color/text_main"
            android:textSize="10sp"
            tools:text="02:32 8/23"
            />
</com.github.mmin18.widget.FlexLayout>