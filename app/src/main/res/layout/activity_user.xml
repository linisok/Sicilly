<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.shaohui.sicilly.views.user_info.UserActivity">
    <me.shaohui.scrollablelayout.ScrollableLayout
        android:id="@+id/scrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:min_top_height="?attr/actionBarSize">
        <include
            layout="@layout/view_user_header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.flyco.tablayout.SegmentTabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    app:tl_indicator_color="@color/positive"
                    app:tl_bar_color="@color/white"
                    app:tl_indicator_corner_radius="8dp"/>
            </FrameLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </me.shaohui.scrollablelayout.ScrollableLayout>
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:background="@null"
            app:srcCompat="@drawable/ic_back_white"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_back"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="邵辉Vista"/>
        <ImageButton
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="@drawable/ic_follow"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/spacing_normal"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_follow"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            android:background="@null"
            app:srcCompat="@drawable/ic_message_white"/>
    </RelativeLayout>

</RelativeLayout>
