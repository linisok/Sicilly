<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_create_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <EditText
                    android:id="@+id/status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingTop="6dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:paddingBottom="6dp"
                    android:background="@null"
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    android:minLines="3"
                    android:lineSpacingExtra="4dp"
                    android:hint="@string/edit_text_hint"
                    tools:text="  fwefefsdfewfwefwefwefwefwefsfewfw"
                    />
            <ImageView
                    android:id="@+id/status_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                >
            <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_close"
                    android:paddingRight="@dimen/spacing_normal"
                    android:paddingLeft="@dimen/spacing_normal"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/btn_back"
                    android:textSize="16sp"
                    android:textColor="@color/text_main"
                    android:text="@string/commit"
                    />
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/drawable_shadow_top"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/drawable_shadow_bottom"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                >
            <ImageButton
                    android:id="@+id/action_at"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/spacing_normal"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_at_black"
                    />
            <ImageButton
                    android:id="@+id/action_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/action_at"
                    android:paddingRight="@dimen/spacing_normal"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_camera"
                    />
            <Button
                    android:id="@+id/action_submit"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/drawable_text_accent"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="@string/commit"
                    />
            <TextView
                    android:id="@+id/text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/action_submit"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textSize="12sp"
                    android:textColor="@color/gray_tag"
                    tools:text="140"
                    />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
