<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.shaohui.sicilly.ui.activities.StatusDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        style="@style/AppTheme.ActionBar"
        android:background="@color/main_300">
        <xyz.shaohui.sicilly.ui.widgets.RotateLoading
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/spacing_normal"
            app:loading_color="@color/white"
            app:loading_width="2dp"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool_bar"/>

</RelativeLayout>
