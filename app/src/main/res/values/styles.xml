<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle.TitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="AppTheme.PictureActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.StatusText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:lineSpacingMultiplier">1.35</item>
    </style>

    <style name="EditText" parent="AppTheme">
        // editText 底部光标颜色
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

</resources>
